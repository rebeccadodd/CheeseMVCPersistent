@model List<CheeseMVC.Models.CheeseCategory>

@{
    ViewBag.Title = "Categories";
}

<h1>Cheese Categories</h1>

<ul>
    @foreach (var cheesecategory in Model)
    {
        <li>@cheesecategory.Name</li>
    }
</ul>

@if (Model.Count == 0)
{
    <p>No categories yet!</p>
}

<p><a asp-controller="Category" asp-action="Add">Add Category</a></p>
